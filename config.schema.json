{
  "pluginAlias": "TahomaPortail",
  "pluginType": "platform",
  "singular": true,
  "header": "Configuration pour portail Somfy via Tahoma",
  "schema": {
    "type": "object",
    "properties": {
      "platform": {
        "type": "string",
        "default": "TahomaPortail",
        "readonly": true
      },
      "name": {
        "type": "string",
        "title": "Nom de la plateforme",
        "default": "Tahoma Portail"
      },
      "username": {
        "type": "string",
        "title": "Email du compte Somfy"
      },
      "password": {
        "type": "string",
        "title": "Mot de passe",
        "format": "password"
      },
      "deviceURL": {
        "type": "string",
        "title": "deviceURL du portail",
        "description": "Tu peux le récupérer avec un script de test ou dans les logs Homebridge"
      }
    },
    "required": ["username", "password", "deviceURL"]
  }
}
