{
  "pluginAlias": "TahomaPortail",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Nom de l'accessoire",
        "type": "string",
        "default": "Portail"
      },
      "ip": {
        "title": "Adresse IP de la box Tahoma",
        "type": "string",
        "placeholder": "192.168.1.50:8443"
      },
      "token": {
        "title": "Token d'authentification",
        "type": "string",
        "description": "Collez ici le token généré via l’API Somfy"
      },
      "deviceURL": {
        "title": "Device URL du portail",
        "type": "string",
        "placeholder": "io://1234-4567-8901/12345678"
      },
      "logState": {
        "title": "Activer les logs d'état",
        "type": "boolean",
        "default": false
      },
      "logInterval": {
        "title": "Intervalle des logs (secondes)",
        "type": "number",
        "default": 30,
        "minimum": 5,
        "maximum": 300,
        "description": "Définissez toutes les combien de secondes afficher l'état du portail",
        "visibleIf": {
          "logState": true
        }
      }
    },
    "required": ["ip", "token", "deviceURL"]
  }
}
